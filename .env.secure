# ModelMuxer Configuration - Security-Conscious Deployment
# This configuration disables ML dependencies and uses simpler routing strategies

# ===== ROUTING CONFIGURATION =====
# Disable semantic routing to avoid sentence-transformers dependency
SEMANTIC_ROUTING_ENABLED=false

# Use heuristic routing as primary strategy
DEFAULT_ROUTING_STRATEGY=heuristic

# Enable other routing strategies
HEURISTIC_ROUTING_ENABLED=true
CASCADE_ROUTING_ENABLED=true

# ===== CORE APPLICATION SETTINGS =====
APP_NAME="ModelMuxer-Secure"
APP_VERSION="2.0.0"
LOG_LEVEL="INFO"
DEBUG=false

# ===== PROVIDER CONFIGURATIONS =====
# OpenAI Configuration (requires API key)
OPENAI_ENABLED=true
# OPENAI_API_KEY=your_openai_key_here

# Anthropic Configuration (requires API key)
ANTHROPIC_ENABLED=true
# ANTHROPIC_API_KEY=your_anthropic_key_here

# Google Configuration (requires API key)
GOOGLE_ENABLED=true
# GOOGLE_API_KEY=your_google_key_here

# Mistral Configuration (requires API key)
MISTRAL_ENABLED=true
# MISTRAL_API_KEY=your_mistral_key_here

# ===== SECURITY SETTINGS =====
# Enable enhanced security features
ENABLE_SECURITY_HEADERS=true
ENABLE_REQUEST_LOGGING=true
ENABLE_RATE_LIMITING=true

# Authentication settings
JWT_SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_IN_PRODUCTION
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# ===== PERFORMANCE SETTINGS =====
# Cache configuration (using Redis if available, memory cache otherwise)
CACHE_TYPE=memory
CACHE_TTL=3600

# Request timeout settings
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# ===== MONITORING AND LOGGING =====
# Structured logging
STRUCTURED_LOGGING=true
LOG_FORMAT=json

# Monitoring (optional)
ENABLE_PROMETHEUS_METRICS=true
METRICS_PORT=8001

# ===== DATABASE CONFIGURATION =====
# SQLite for simplicity in secure environments
DATABASE_URL=sqlite:///./modelmuxer_secure.db

# ===== DEPLOYMENT NOTES =====
# This configuration is optimized for:
# 1. Security-conscious environments
# 2. Minimal dependencies
# 3. No ML/AI model dependencies
# 4. Simple deployment requirements
#
# To use this configuration:
# 1. Copy this file to .env.secure
# 2. Update API keys for your chosen providers
# 3. Set JWT_SECRET_KEY to a secure random string
# 4. Install with: poetry install --without ml
# 5. Run with: poetry run modelmuxer-server --env-file=.env.secure
