# Security-focused environment configuration
# This file addresses SNYK warnings about insecure configurations

# SSL/TLS Configuration - ALWAYS use secure defaults
SSL_VERIFY=true
TLS_MIN_VERSION=1.2
REQUIRE_HTTPS=true

# Redis Configuration - Secure by default
REDIS_SSL=true
REDIS_TLS_VERIFY=true
REDIS_REQUIRE_AUTH=true

# HTTP Client Configuration
HTTP_VERIFY_SSL=true
HTTP_FOLLOW_REDIRECTS=false
HTTP_TIMEOUT=60

# Authentication Configuration
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24
REQUIRE_STRONG_PASSWORDS=true
MIN_PASSWORD_LENGTH=12

# Rate Limiting
ENABLE_RATE_LIMITING=true
DEFAULT_RATE_LIMIT_PER_MINUTE=60
DEFAULT_RATE_LIMIT_PER_HOUR=1000

# Logging Security
LOG_SANITIZE_SENSITIVE_DATA=true
LOG_LEVEL=INFO

# CORS Configuration
CORS_ALLOW_CREDENTIALS=false
CORS_ALLOW_ALL_ORIGINS=false

# Content Security
ENABLE_CSRF_PROTECTION=true
ENABLE_XSS_PROTECTION=true
ENABLE_CONTENT_TYPE_SNIFFING_PROTECTION=true
